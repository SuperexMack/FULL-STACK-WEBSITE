<% layout("/layouts/boilerplate") %>

<body>
    
<h3>Edit your Listing</h3>



<form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation">


<div>

<lable for="title" class="form-label">Title</lable>
<input name="listing[title]" value="<%=listing.title%>" type="text" class="form-control" required>
<div class="valid-feedback">Title looks good</div>
<div class="invalid-feedback">Plese Enter the Title</div>


</div>


<div>

<lable for="description" class="form-label">Description</lable>
<textarea  name="listing[description]"  type="text" class="form-control" required><%=listing.description%></textarea>
<div class="valid-feedback">Description looks good</div>
<div class="invalid-feedback">Plese Enter the Description</div>

</div>


<div>

<lable for="image" class="form-label">Image</lable>
<input name="listing[image]" value="<%=listing.image%>" type="text" class="form-control" required>


</div>


<div>

<lable for="price" class="form-label">Price</lable>
<input name="listing[price]" value="<%=listing.price%>" type="number" class="form-control" required>
<div class="valid-feedback">Price looks good</div>
<div class="invalid-feedback">Plese Enter the Valid Price</div>

</div>


<div>

<lable for="location" class="form-label">Location</lable>
<input name="listing[location]" value="<%=listing.location%>" type="text" class="form-control" required>
<div class="valid-feedback">Location  looks good</div>
<div class="invalid-feedback">Plese Enter the Location</div>

</div>

<div>

<lable for="country" class="form-label">Country</lable>
<input name="listing[country]" value="<%=listing.country%>" type="text" class="form-control" required>
<div class="valid-feedback">Country's Name looks good</div>
<div class="invalid-feedback">Plese Enter the Valid Country</div>

</div>

<br>

<button class="btn ">Edit</button>


</form>







</body>
